@{
    ViewData["Title"] = "Juego";
}

<div class="juego">
    <h2>Jugador: @ViewBag.Username</h2>
    <p>Puntaje actual: @ViewBag.Puntaje</p>
    <h3>Pregunta @ViewBag.NroPregunta</h3>
    <p>@ViewBag.Pregunta.Enunciado</p>
    <form method="post" action="/Home/VerificarRespuesta">
        <input type="hidden" name="idPregunta" value="@ViewBag.Pregunta.IdPregunta" />
        @foreach (var r in ViewBag.Respuestas)
        {
            <button type="submit" name="idRespuesta" value="@r.IdRespuesta">@r.Texto</button>
        }
    </form>
</div>
