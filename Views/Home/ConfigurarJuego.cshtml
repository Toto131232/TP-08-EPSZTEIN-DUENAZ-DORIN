@{
    ViewData["Title"] = "Configurar Juego";
}
<header>
    <nav class="navbar">
    <div class="nav-logo"><img src="~/img/Logo.png" alt="Logo" />
</div>

    <div class="Titulo"><h1 class="mt-3"></h1></div>
    <div class="nav-links">
        <a href="@Url.Action("ConfigurarJuego","Home")" class="nav-btn">Jugar</a>
    </div>
</nav>
</header>
<form method="get" action="/Home/Comenzar" class="config-form">
    <label>Nombre de usuario:</label>
    <input type="text" name="username" required />

    <label>Dificultad:</label>
    <select name="dificultad" required>
        <option value="-1">Todas</option>
        @foreach (var d in ViewBag.Dificultades)
        {
            <option value="@d.IdDificultad">@d.Nombre</option>
        }
    </select>

    <label>Categor√≠a:</label>
    <select name="categoria" required>
        <option value="-1">Todas</option>
        @foreach (var c in ViewBag.Categorias)
        {
            <option value="@c.IdCategoria">@c.Nombre</option>
        }
    </select>

    <button type="submit">Jugar</button>
</form>